    <div ng-if="!next" class="row setup-content" id="step-1">
        <div class="col-md-5 col-xs-12 center">
            <form action="#" method="POST">
                <div class="col-md-12">
                    <select class="form-control" ng-model="comida.lugar">
                            <option value="">Selecciona lugar</option>
                            <option value="macDonal">McDonalds</option>
                            <option value="cafeteria">Cafetería</option>
                            <option value="cafeteriaLlevar">Cafetería (para llevar)</option>
                            <option value="amigo">Amigo Miguel</option>
                    </select>
                    <br>
                    <button ng-if="comida.lugar != 'macDonal'" ng-click="siguiente()" class="btn btn-primary nextBtn btn-block" type="button">Siguiente</button>
                    <button ng-if="comida.lugar == 'macDonal'" ng-click="finalizar($event)" class="btn btn-primary nextBtn btn-block " type="submit">Finalizar</button>
                </div>
        </div>
        </form>
    </div>
    <div ng-if="next" class="row setup-content" id="step-2">
        <div class="col-xs-12 col-md-5 center">
            <form role="form" action="#" method="POST">
                <div class="col-md-12">
                    <div class="form-group">
                        <!--   <label class="control-label">Primer plato</label> -->
                        <input ng-model="comida.primerPlato" maxlength="200" required="required" class="form-control" placeholder="Primer plato"
                            type="text">
                    </div>
                    <div class="form-group">
                        <!-- <label class="control-label">Segundo plato</label> -->
                        <input ng-model="comida.segundoPlato" maxlength="200" required="required" class="form-control" placeholder="Segundo plato"
                            type="text">
                    </div>
                    <div class="form-group">
                        <!-- <label class="control-label">Postre</label> -->
                        <input maxlength="200" ng-model="comida.postre" required="required" class="form-control" placeholder="Postre" type="text">
                    </div>
                    <div class="form-group">
                        <!-- <label class="control-label">Postre</label> -->
                        <input maxlength="200" ng-model="comida.bebida" required="required" class="form-control" placeholder="Bebida" type="text">
                    </div>
                    <button ng-click="finalizar($event)" class="btn-block btn btn-primary nextBtn btn-lg pull-right" type="submit">Finalizar</button>
                </div>
        </div>
        </form>
    </div>
    </form>

